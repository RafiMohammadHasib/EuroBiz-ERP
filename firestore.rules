
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/user_roles/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- Business-Wide Data ---
    // Admins have full access. All other authenticated users have read-only access.
    match /{path=**}/products/{productId} { allow read, write: if isAdmin(); allow get, list: if isSignedIn(); }
    match /{path=**}/settings/{settingId} { allow read, write: if isAdmin(); allow get, list: if isSignedIn(); }
    match /{path=**}/distribution_channels/{dcId} { allow read, write: if isAdmin(); allow get, list: if isSignedIn(); }
    match /{path=**}/distributors/{distributorId} { allow read, write: if isAdmin(); allow get, list: if isSignedIn(); }
    match /{path=**}/suppliers/{supplierId} { allow read, write: if isAdmin(); allow get, list: if isSignedIn(); }
    match /{path=**}/purchaseOrders/{poId} { allow read, write: if isAdmin(); allow get, list: if isSignedIn(); }
    match /{path=**}/sales_commissions/{commissionId} { allow read, write: if isAdmin(); allow get, list: if isSignedIn(); }
    match /{path=**}/invoices/{invoiceId} { allow read, write: if isAdmin(); allow get, list: if isSignedIn(); }
    match /{path=**}/rawMaterials/{materialId} { allow read, write: if isAdmin(); allow get, list: if isSignedIn(); }
    match /{path=**}/finishedGoods/{goodId} { allow read, write: if isAdmin(); allow get, list: if isSignedIn(); }
    match /{path=**}/productionOrders/{prodId} { allow read, write: if isAdmin(); allow get, list: if isSignedIn(); }
    match /{path=**}/commissions/{commissionId} { allow read, write: if isAdmin(); allow get, list: if isSignedIn(); }
    match /{path=**}/salary_payments/{paymentId} { allow read, write: if isAdmin(); allow get, list: if isSignedIn(); }


    // --- User & Role Data ---
    match /user_roles/{uid} {
      allow read, write: if isAdmin();
    }

    match /salespeople/{salespersonId} {
      allow get, update, delete: if isOwner(salespersonId);
      allow create: if isOwner(salespersonId) && request.resource.data.id == salespersonId;

      match /commissions/{commissionId} {
        allow read, write: if isOwner(salespersonId);
      }
    }

    match /customers/{customerId} {
      allow get, update, delete: if isOwner(customerId);
      allow create: if isOwner(customerId) && request.resource.data.id == customerId;
      allow list: if isSignedIn();

      match /invoices/{invoiceId} {
        allow read, write: if isOwner(customerId);

        match /outstanding_dues/{dueId} {
          allow read, write: if isOwner(customerId);
        }
      }
    }
  }
}
